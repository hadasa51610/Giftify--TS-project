{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "moduleResolution": "node",
    "lib": ["ES2019", "DOM"],
    "rootDir": "src/ts",
    "outDir": "public/ts",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src/ts/**/*"]
}
